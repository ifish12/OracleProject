<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ModifyAssignment"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/gridLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/AssignmentNameNew"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placeholder"
            android:id="@+id/txtAssignmentName"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/AssignmentWorth"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/txtAssignmentWorth"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/TimeSpent"
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/TimeSpentHours"
            android:id="@+id/textView3"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/txtAssignmentHours"
            android:layout_row="3"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/TimeGoal"
            android:id="@+id/textView6"
            android:layout_row="4"
            android:layout_column="0"
            android:padding="5dp"
            android:paddingTop="25dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:id="@+id/btnAddAssignmentHours"
            android:layout_row="3"
            android:layout_column="2" />

        <EditText
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/editGoal"
            android:layout_row="4"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/DueDateNew"
            android:id="@+id/WhatIsTheDefaultValue"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/gridLayout"
            android:layout_alignParentStart="true"
            android:layout_row="9"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Never"
            android:id="@+id/txtDueDate"
            android:layout_row="9"
            android:layout_column="1" />

    </GridLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/DiscardAssignment"
        android:id="@+id/btnDiscard"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/SaveAssignment"
        android:id="@+id/btnSave"
        android:layout_alignTop="@+id/btnDiscard"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
